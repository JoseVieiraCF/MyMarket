<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/walmart_store" />

        <TextView
            android:id="@+id/MarketTextNameList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textAlignment="center"
            android:textColor="#EE070707"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/MarketTextDescList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="#EE070707"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/MarketTextNeighborhoodList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visto por ultimo"
            android:textColor="#EE070707"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/MarketTextFunctionTimeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fechado"
            android:textColor="#EE8B8A8A"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>